<% icon_sizes = ["48", "72", "96", "144", "192", "512"] %>
{
  "name": "LP Calculator",
  "short_name": "LP Calc",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "icons/icon-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#BA38DF",
  "background_color": "#000000",
  "display": "fullscreen",
  "orientation": "portrait"
}
