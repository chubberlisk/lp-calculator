<section id="sign-up">
  <div class="container text-center">
    <h2>Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group"">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email Address', class: 'form-control' %>
    </div>
    <div class="form-group"">
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder: 'Password' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Password Confirmation', class: 'form-control' %>
      <% if @minimum_password_length %>
        <small id="passwordHelpBlock" class="form-text text-muted">
          Your password must be a minimum of <%= @minimum_password_length %> characters long.
        </small>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit "Sign Up", class: 'btn btn-success' %>
    </div>
    <% end %>
    <br />
    <%= render "devise/shared/links" %>
  </div>
</section>
