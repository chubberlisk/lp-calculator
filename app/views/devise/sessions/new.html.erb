<section id="sign-in">
  <div class="container text-center">
    <div class="card text-white bg-dark mx-auto">
      <div class="card-header"><i class="fas fa-sign-in-alt"></i></div>
      <div class="card-body">
        <% title = current_page?('/users/sign_in') ? 'Sign In' : 'Admin Sign In' %>
        <h3 class="card-title"><%= title %></h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-envelope"></i></div>
            </div>
            <% if current_page?('/users/sign_in') %>
              <%= f.text_field :login, autofocus: true, autocomplete: 'email', placeholder: 'Email Address or Username', class: 'form-control' %>
            <% else %>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email Address', class: 'form-control' %>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-key"></i></div>
            </div>
            <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'Password', class: 'form-control' %>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
        <div class="form-group form-check">
          <%= f.check_box :remember_me, id: 'remember-me', class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label', for: 'remember-me' %>
        </div>
        <% end -%>
        <div class="actions">
          <%= f.submit 'Enter the Shadow Realm', class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
